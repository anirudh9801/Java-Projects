package com.java.customer;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.SQLException;
import java.util.Date;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

/**
 * Servlet implementation class CreateAccountServlet
 */
public class CreateAccountServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public CreateAccountServlet() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		response.getWriter().append("Served at: ").append(request.getContextPath());
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		CreateAccount account = new CreateAccount();

		account.setCustomer_Firstname(request.getParameter("firstname"));

		account.setCustomer_lastname(request.getParameter("lastname"));

		account.setCustomer_username(request.getParameter("username"));

		account.setCustomer_password(request.getParameter("password"));

		account.setCustomer_email(request.getParameter("email"));

		account.setCustomer_phoneno(request.getParameter("phone"));

		PrintWriter out=response.getWriter();

		CreateAccountDAO dao=new CreateAccountImpl();

		try {

			out.println(dao.createaccount(account));

		} catch (ClassNotFoundException | SQLException e) {

			// TODO Auto-generated catch block

			e.printStackTrace();

		}

	}

	    }
	
